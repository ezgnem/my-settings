{
    "overrides": [
        {
            "files": ["**/*.htm", "**/*.html"],
            "options": {
                "tabWidth": 2,
                "printWidth": 160,
                "bracketSameLine": true
            }
        },
        {
            "files": ["**/*.css"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["**/*.js"],
            "options": {
                "tabWidth": 4,
                "semi": true
            }
        },
        {
            "files": ["**/*.json"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["**/.prettierrc.json"],
            "options": { "parser": "json" }
        }
    ]
}
